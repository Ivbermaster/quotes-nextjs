generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id         BigInt   @id @default(autoincrement())
  text       String
  author     String
  categories String[] // массив тегов
  createdAt  DateTime @default(now())

  @@index([author])
}

model Favorite {
  userId    String
  quoteId   BigInt
  createdAt DateTime @default(now())

  @@id([userId, quoteId])
  @@index([userId])
  @@index([quoteId])
}
